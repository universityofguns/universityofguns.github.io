---
import Layout from '~/layouts/LandingLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Subscribe',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="The World's Best Newsletter"
    title="Subscribe"
    subtitle="Subscribe for updates & exclusives."
    actions={[
      { variant: 'primary', text: 'Subscribe', href: '/subscribe', },
      { text: 'Join Community', href: '#' },
    ]}
    image={{
      src: 'https://public-files.gumroad.com/7phxkwjpphetvcfw8eq7158yvlth',
      alt: 'The world\'s best boxing newsletter image',
      height: 300,
    }}
  />

  
</Layout>
